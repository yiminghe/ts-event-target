{
  "compilerOptions": {
    "outDir": "lib",
    "module": "ESNext",
    "target": "es5",
    "lib": [
      "es2016",
      "es5"
    ],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [		
    "src/",
    "types/index.d.ts",
    "stories/"
  ],
  "exclude": [		
    "node_modules/",
    "src/__tests__/"
  ]
}